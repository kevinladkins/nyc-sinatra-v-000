<!DOCTYPE html>
<html>
  <head>
    <title><%=@figure.name%></title>
  </head>
  <body>
  <h1><%=@figure.name%></h1>
  <h4><a href = "/figures/<%=@figure.id%>/edit">Edit</a></h4>
  <h3>Titles</h3>
  <ul>
  <%@figure.titles.each do |t|%>
    <li><%=t.name%></li>
    <%end%>
  </ul>
  <h3>Landmarks</h3>
  <ul>
  <%@figure.landmarks.each do |l|%>
    <li><a href = "/landmarks/<%=l.id%>"><%=l.name%></a></li>
    <%end%>
  </ul>

  </body>

</html>
